@model Products
@{
}
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Kreiraj produkt</h2>
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StockQuantity"></label>
            <input asp-for="StockQuantity" class="form-control" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="control-label">Select Image</label>
            <input type="file" asp-for="ImageFile" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="CategoryID">Kategorija</label>
            <select asp-for="CategoryID" asp-items="Model.CategoryList" class="form-control">
                <option value="0">All</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>
        <br/>
        
        <button type="submit" class="btn btn-dark" style="width:150px">Kreiraj</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Povratak
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

