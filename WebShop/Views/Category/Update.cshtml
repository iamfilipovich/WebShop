@model WebShop.Models.Category
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update category</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="CategoryID" />
                <div class="form-group">
                    <label asp-for="Name">Name </label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @if ((string)TempData["msg"] == "Success")
                        {
                            <p class="text-success">Action successful</p>
                        }
                        else if ((string)TempData["msg"] == "Error")
                        {
                            <p class="text-danger">Action encountered an error</p>
                        }
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Save</button>
                    <a href="/Category/Index" class="btn btn-secondary">Povratak</a>
                </div>

            </form>
        </div>
    </div>
</div>